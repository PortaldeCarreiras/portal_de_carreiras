// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// tabela login 
model Login {
  cpf           String  @id
  senhaHash     String
  ativo         Boolean
  administrador Int

  // nome da tabela no banco de dados
  @@map(name: "tb_login")
}

// tabela categoria da pergunta 
model Categoria_pergunta {
  id_categoria_pergunta Int        @id @default(autoincrement())
  descricao             String
  Pergunta              Pergunta[] // uma lista com todas as perguntas de uma categoria 

  @@map(name: "tb_categoria_pergunta")
}

// tabela pergunta 
model Pergunta {
  ID_pergunta           Int     @id @default(autoincrement())
  pergunta              String
  statusPergunta        Boolean
  id_categoria_pergunta Int // Chave estrangeira para a tabela Categoria_pergunta

  // Relacionamento com a tabela Categoria_pergunta
  categoria_pergunta Categoria_pergunta @relation(fields: [id_categoria_pergunta], references: [id_categoria_pergunta])

  @@map(name: "tb_pergunta")
}
